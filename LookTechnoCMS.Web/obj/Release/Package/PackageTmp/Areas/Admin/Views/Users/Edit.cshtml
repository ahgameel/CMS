@using System.Web.Optimization
@using Kendo.Mvc.UI
@model LookTechnoCMS.Web.Areas.Admin.Models.EditUserViewModel

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption"><i class="icon-user"></i>Edit User</div>
                <div class="actions">
                    <div class="btn-group">
                        <a id="sample_editable_1_new" href="@Url.Action("Index", "Users")" class="btn green">
                            Back To List <i class="icon-arrow-right"></i>
                        </a>


                    </div>

                </div>
            </div>
            <div class="portlet-body form">

                @using (Html.BeginForm("Edit", "Users", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(model=>model.Id)
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">UserName</label>
                            <div class="col-md-4">


                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "UserName" })


                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Email Address</label>
                            <div class="col-md-4">

                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email Address", @type = "email" })



                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Password</label>
                            <div class="col-md-4">

                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })



                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Role</label>
                            <div class="col-md-4">
                                @(Html.Kendo().DropDownListFor(model => model.RoleId)
                                              .Name("RoleId")
                                              .HtmlAttributes(new { style = "width: 100%" })
                                              .OptionLabel("Select Role")
                                              .DataTextField("Name")
                                              .DataValueField("Id")

                              .DataSource(source => source.Read(read => read.Action("GetAllRoles", "Users")).ServerFiltering(true))

                                )




                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" name="submit" class="btn blue" value="Save">Save</button>
                            <button type="submit" name="submit" class="btn blue" value="SaveAndContinue">Save and Continue</button>
                            <button type="button" onclick="window.location.href='@Url.Action("Index", "Users")'" class="btn default">Cancel</button>
                        </div>
                    </div>

                }

            </div>
        </div>

    </div>
</div>
<script>
    $(function () {
        $("form").kendoValidator();
    });
</script>