@using System.Web.Optimization
@model LookTechnoCMS.Web.Models.ProductViewModel
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption"><i class="icon-shopping-cart"></i>Edit Product</div>
                <div class="actions">
                    <div class="btn-group">
                        <a id="sample_editable_1_new" href="@Url.Action("Index", "Product")" class="btn green">
                            Back To List <i class="icon-arrow-right"></i>
                        </a>


                    </div>

                </div>
            </div>
            <div class="portlet-body form">

                @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-body">
                        @Html.Partial("_CreateEdit")
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" name="submit" id="btnsave" onclick="hideimage()" class="btn blue" value="Save">Save</button>
                            <button type="submit" name="submit" id="btnsaveand" onclick="hideimage()" class="btn blue" value="SaveAndContinue">Save and Continue</button>
                            <button type="button" onclick="window.location.href='@Url.Action("Index", "Product")'" class="btn default">Cancel</button>
                        </div>
                    </div>

                }

            </div>
        </div>

    </div>
</div>
<script>
    $(function () {
        $("form").kendoValidator();
    });
    $(document).ready(function () {

        var validator = $("#ValidateDemoContainer").kendoValidator().data("kendoValidator");


    });
    function hideimage() {
        var i = $("#files").parent().siblings("ul").length;

        if (($("#previousimage").attr('src') == "") && ($("#files").parent().siblings("ul").length == 0)) {


            $("#files").data('rule-required', true);
            $("#files").attr("required", "true");

        }
        else {
            $("#files").removeAttr("required");
        }

    }


</script>
