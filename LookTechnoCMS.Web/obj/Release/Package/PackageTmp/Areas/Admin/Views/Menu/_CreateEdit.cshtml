@using Kendo.Mvc.UI
@model LookTechnoCMS.Web.Models.MenuViewModel
 
<div id="ValidateDemoContainer">

    <!-- BEGIN FORM-->
    @*@Html.ValidationSummary(true)*@
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model =>model.DateCreated)
    <div class="form-group">
        <label class="col-md-3 control-label">Link Title</label>
        <div class="col-md-4">


            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Link Title" })


        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Link Title Arabic</label>
        <div class="col-md-4">


            @Html.TextBoxFor(model => model.NameAr, new { @class = "form-control", @placeholder = "Link Title Arabic"  })


        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Page</label>
        <div class="col-md-4">
            @(Html.Kendo().DropDownListFor(model => model.PageID)

                                     .Name("PageID")
                                    .HtmlAttributes(new { style = "width: 100%", required = true, @validationMessage = "Please Select Page" })
                                    .OptionLabel("Select Page")
                                   .Filter(FilterType.Contains)
                                    .DataTextField("Name")
                                    .DataValueField("Id")

                                          .DataSource(source => source.Read(read => read.Action("GetPages", "Menu")))

            )

        
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Parent Menu Link</label>
        <div class="col-md-4">

            @(Html.Kendo().DropDownListFor(model => model.ParentMenuId)

                                    .Name("ParentMenuId")
                                    .HtmlAttributes(new { style = "width: 100%" })
                                            .OptionLabel("Select Parent Menu Link")
                                   .Filter(FilterType.Contains)
                                    .DataTextField("Name")
                                    .DataValueField("Id")

                                   .DataSource(source => source.Read(read => read.Action("GetParentMenuLink", "Menu")))

            )
        


        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Active</label>
        <div class="col-md-9">

            @Html.EditorFor(model => model.Active, new { @class = "form-control" })
          


        </div>
    </div>
    
   
    
   
    
    
    

    

    <!-- END FORM-->
</div>
