
@using Kendo.Mvc.UI

@using System.Web.Optimization
@model  LookTechnoCMS.Web.Models.CellSettingViewModel
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">Our Mission</div>
                <div class="actions">
                    <div class="btn-group">
                        <a id="sample_editable_1_new" href="@Url.Action("Index", "Cell")" class="btn green">
                            Back To List <i class="icon-arrow-right"></i>
                        </a>


                    </div>

                </div>
            </div>
            <div class="portlet-body form">

                @using (Html.BeginForm("OurMission", "Cell", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-body">
                        <div id="ValidateDemoContainer">
                            @Html.HiddenFor(model => model.Id)
                            <div class="tabbable tabbable-custom boxless">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#tab_0" data-toggle="tab">Content English </a></li>
                                    <li class=""><a href="#tab_1" data-toggle="tab">Content Arabic</a></li>

                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab_0">


                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Content</label>
                                            <div class="col-md-9">


                                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Content", @rows = "6", required = true, @validationMessage = "Please enter Content" })


                                            </div>
                                        </div>



                                    </div>
                                    <div class="tab-pane" id="tab_1">

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Content</label>
                                            <div class="col-md-9">


                                                @Html.TextAreaFor(model => model.DescriptionAr, new { @class = "form-control", @placeholder = "Content", @rows = "6", required = true, @validationMessage = "Please enter Content" })


                                            </div>
                                        </div>



                                    </div>




                                </div>
                            </div>




                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" name="submit" id="btnsave" class="btn blue" value="Save">Save</button>
                            <button type="submit" name="submit" id="btnsaveand" class="btn blue" value="SaveAndContinue">Save and Continue</button>
                            <button type="button" onclick="window.location.href='@Url.Action("Index", "Cell")'" class="btn default">Cancel</button>
                        </div>
                    </div>

                }

            </div>
        </div>

    </div>
</div>
<script>
    $(function () {
        $("form").kendoValidator();
    });
    $(document).ready(function () {

        var validator = $("#ValidateDemoContainer").kendoValidator().data("kendoValidator");


    });

</script>

