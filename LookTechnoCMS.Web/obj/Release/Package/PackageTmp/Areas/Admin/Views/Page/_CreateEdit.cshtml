@using Kendo.Mvc.UI
@model LookTechnoCMS.Web.Models.PageViewModel
 
<div id="ValidateDemoContainer">

    <!-- BEGIN FORM-->
    @*@Html.ValidationSummary(true)*@
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(mode => Model.DateCreated)
    
    
    <div class="tabbable tabbable-custom boxless">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tab_0" data-toggle="tab">Page English </a></li>
            <li class=""><a href="#tab_1" data-toggle="tab">Page Arabic</a></li>
       
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_0">

                <div class="form-group">
                    <label class="col-md-3 control-label">Page Title</label>
                    <div class="col-md-4">


                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Page Title" })


                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Page Body</label>
                    <div class="col-md-9">


                        @(Html.Kendo().EditorFor(model => model.Body)
                   .HtmlAttributes(new { style = "width: 100%;height:440px" })
                      .Tools(tools => tools
                  .Clear()
                  .Bold().Italic().Underline().Strikethrough()
                  .JustifyLeft().JustifyCenter().JustifyRight().JustifyFull()
                  .InsertUnorderedList().InsertOrderedList()
                  .Outdent().Indent()
                  .CreateLink().Unlink()
                  .InsertImage()
                  .InsertFile()
                  .SubScript()
                  .SuperScript()
                  .TableEditing()
                  .ViewHtml()
                  .Formatting()
                  .CleanFormatting()
                  .FontName()
                  .FontSize()
                  .FontColor().BackColor()
                  .Print()
                  )






                        )


                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Meta Title</label>
                    <div class="col-md-9">


                        @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control", @placeholder = "MetaTitle" })


                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Meta KeyWords</label>
                    <div class="col-md-9">


                        @Html.TextBoxFor(model => model.MetaKeywords, new { @class = "form-control", @placeholder = "MetaKeyWords" })


                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">MetaDescription</label>
                    <div class="col-md-9">


                        @Html.TextAreaFor(model => model.MetaDescription, new { @class = "form-control", @placeholder = "MetaDescription" })


                    </div>
                </div>

              
            </div>
            <div class="tab-pane" id="tab_1">

                <div class="form-group">
                    <label class="col-md-3 control-label">Page Title</label>
                    <div class="col-md-4">


                        @Html.TextBoxFor(model => model.NameAr, new { @class = "form-control", @placeholder = "Page Title" })


                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Page Body</label>
                    <div class="col-md-9">


                        @(Html.Kendo().EditorFor(model => model.BodyAr)
                   .HtmlAttributes(new { style = "width: 100%;height:440px" })
                      .Tools(tools => tools
                  .Clear()
                  .Bold().Italic().Underline().Strikethrough()
                  .JustifyLeft().JustifyCenter().JustifyRight().JustifyFull()
                  .InsertUnorderedList().InsertOrderedList()
                  .Outdent().Indent()
                  .CreateLink().Unlink()
                  .InsertImage()
                  .InsertFile()
                  .SubScript()
                  .SuperScript()
                  .TableEditing()
                  .ViewHtml()
                  .Formatting()
                  .CleanFormatting()
                  .FontName()
                  .FontSize()
                  .FontColor().BackColor()
                  .Print()
                  )






                        )


                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Meta Title</label>
                    <div class="col-md-9">


                        @Html.TextBoxFor(model => model.MetaTitleAr, new { @class = "form-control", @placeholder = "MetaTitle" })


                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Meta KeyWords</label>
                    <div class="col-md-9">


                        @Html.TextBoxFor(model => model.MetaKeywordsAr, new { @class = "form-control", @placeholder = "MetaKeyWords" })


                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">MetaDescription</label>
                    <div class="col-md-9">


                        @Html.TextAreaFor(model => model.MetaDescriptionAr, new { @class = "form-control", @placeholder = "MetaDescription" })


                    </div>
                </div>

            </div>
            



        </div>
    </div>
    <hr>
    <div class="form-group">
        <label class="col-md-3 control-label">Frindly Url Title</label>
        <div class="col-md-4">

         
            @Html.TextBoxFor(model => model.NavigationUrl, new { @class = "form-control", @placeholder = "Frindly Url Title" })


            <label class="label-success">Url Title Sample    [About-Us    or  AboutUs]</label>











        </div>
    </div>
    

    
   
    
    
    

    

    <!-- END FORM-->
</div>
